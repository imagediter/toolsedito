<!-- Toast Notification -->
<div class="toast" id="toast">
  <i class="fas fa-check-circle" id="toastIcon"></i>
  <div class="toast-content">
    <div class="toast-title" id="toastTitle">Success!</div>
    <div class="toast-message" id="toastMessage">Hashtags copied to clipboard</div>
  </div>
</div>

<script>
// ====================
// FREE HASHTAG GENERATOR
// ====================
function generateFreeHashtags() {
  const input = document.getElementById('freeInput').value.trim();
  const output = document.getElementById('freeOutput');
  
  // Clear previous output
  output.innerHTML = '';
  
  // If no input, show default hashtags
  if (!input) {
    const defaultTags = [
      '#SocialMedia', '#ContentCreation', '#DigitalMarketing', 
      '#OnlinePresence', '#HashtagStrategy', '#HashFlow', '#FreeTool'
    ];
    
    defaultTags.forEach(tag => {
      const tagElement = createHashtagElement(tag);
      output.appendChild(tagElement);
    });
    
    updateStats('free');
    return;
  }
  
  // Show loading animation
  output.innerHTML = `
    <div class="loading">
      <div class="spinner"></div>
      <p>Generating hashtags...</p>
    </div>
  `;
  
  // Process after a short delay for better UX
  setTimeout(() => {
    // Split input by commas and clean up
    const keywords = input.split(',')
      .map(k => k.trim())
      .filter(k => k.length > 0);
    
    let hashtags = [];
    
    // Generate hashtags for each keyword
    keywords.forEach(keyword => {
      const cleanKeyword = keyword.toLowerCase()
        .replace(/[^a-z0-9\s]/g, '') // Remove special characters
        .replace(/\s+/g, ''); // Remove spaces
      
      if (cleanKeyword && cleanKeyword.length >= 2) {
        // Create variations
        hashtags.push(`#${cleanKeyword}`);
        hashtags.push(`#${cleanKeyword}2023`);
        hashtags.push(`#${cleanKeyword}Life`);
        hashtags.push(`#${cleanKeyword}Love`);
        hashtags.push(`#Best${capitalizeFirstLetter(cleanKeyword)}`);
        hashtags.push(`#${cleanKeyword}Goals`);
        hashtags.push(`#${cleanKeyword}Journey`);
        hashtags.push(`#${cleanKeyword}Community`);
      }
    });
    
    // Add some general popular hashtags
    const popularTags = [
      '#SocialMedia', '#DigitalMarketing', '#ContentCreator', 
      '#OnlineBusiness', '#MarketingTips', '#GrowthHacking'
    ];
    
    hashtags = [...hashtags, ...popularTags];
    
    // Remove duplicates and limit to 30
    hashtags = [...new Set(hashtags)].slice(0, 30);
    
    // Clear output
    output.innerHTML = '';
    
    // Add hashtags with animation
    hashtags.forEach((tag, index) => {
      const tagElement = createHashtagElement(tag);
      tagElement.style.animationDelay = `${index * 0.05}s`;
      output.appendChild(tagElement);
    });
    
    updateStats('free');
  }, 600);
}

// ====================
// AI HASHTAG GENERATOR
// ====================
function generateAIHashtags() {
  const input = document.getElementById('aiInput').value.trim();
  const output = document.getElementById('aiOutput');
  
  // Clear previous output
  output.innerHTML = '';
  
  // If no input, show default hashtags
  if (!input) {
    const defaultTags = [
      '#AIHashtags', '#SmartTool', '#ContentOptimization', 
      '#SocialMediaAI', '#Trending', '#HashFlow', '#AIAssistant'
    ];
    
    defaultTags.forEach(tag => {
      const tagElement = createHashtagElement(tag);
      output.appendChild(tagElement);
    });
    
    updateStats('ai');
    return;
  }
  
  // Show loading animation
  output.innerHTML = `
    <div class="loading">
      <div class="spinner"></div>
      <p>AI analyzing your content...</p>
    </div>
  `;
  
  // Process after a short delay for better UX
  setTimeout(() => {
    // Analyze the input text
    const topics = analyzeTextTopics(input);
    const hashtags = generateSmartHashtags(topics, input);
    
    // Clear output
    output.innerHTML = '';
    
    // Add hashtags with animation
    hashtags.forEach((tag, index) => {
      const tagElement = createHashtagElement(tag);
      tagElement.style.animationDelay = `${index * 0.05}s`;
      output.appendChild(tagElement);
    });
    
    updateStats('ai');
  }, 800);
}

// ====================
// COPY HASHTAGS FUNCTION
// ====================
function copyHashtags(outputId, toolType) {
  const output = document.getElementById(outputId);
  const hashtagElements = output.querySelectorAll('.hashtag');
  
  // Check if there are hashtags to copy
  if (hashtagElements.length === 0) {
    showToast('No Hashtags', 'Generate hashtags first!', 'error');
    return;
  }
  
  // Extract text from hashtag elements
  const hashtags = Array.from(hashtagElements)
    .map(el => el.textContent)
    .join(' ');
  
  // Create a temporary textarea element
  const textarea = document.createElement('textarea');
  textarea.value = hashtags;
  textarea.style.position = 'fixed';
  textarea.style.opacity = '0';
  document.body.appendChild(textarea);
  
  // Select and copy the text
  textarea.select();
  textarea.setSelectionRange(0, 99999); // For mobile devices
  
  try {
    const successful = document.execCommand('copy');
    
    if (successful) {
      showToast('Copied!', `${hashtagElements.length} hashtags copied to clipboard`, 'success');
      
      // Visual feedback on button
      const copyBtn = document.querySelector(`[onclick="copyHashtags('${outputId}', '${toolType}')"]`);
      if (copyBtn) {
        copyBtn.innerHTML = '<i class="fas fa-check"></i> Copied!';
        copyBtn.style.background = 'rgba(16, 185, 129, 0.2)';
        copyBtn.style.borderColor = '#10b981';
        
        setTimeout(() => {
          copyBtn.innerHTML = '<i class="far fa-copy"></i> Copy All';
          copyBtn.style.background = '';
          copyBtn.style.borderColor = '';
        }, 2000);
      }
    } else {
      showToast('Error', 'Failed to copy hashtags', 'error');
    }
  } catch (err) {
    console.error('Copy failed:', err);
    showToast('Error', 'Failed to copy hashtags', 'error');
  }
  
  // Clean up
  document.body.removeChild(textarea);
}

// ====================
// HELPER FUNCTIONS
// ====================
function createHashtagElement(text) {
  const span = document.createElement('span');
  span.className = 'hashtag';
  span.textContent = text;
  
  // Make hashtags clickable to add to input
  span.addEventListener('click', function() {
    const keyword = text.replace('#', '');
    const freeInput = document.getElementById('freeInput');
    const currentValue = freeInput.value.trim();
    
    if (currentValue) {
      freeInput.value = currentValue + ', ' + keyword;
    } else {
      freeInput.value = keyword;
    }
    
    // Visual feedback
    this.style.transform = 'scale(0.9)';
    setTimeout(() => {
      this.style.transform = '';
    }, 200);
    
    showToast('Added', `"${keyword}" added to keywords`, 'info');
  });
  
  return span;
}

function analyzeTextTopics(text) {
  const textLower = text.toLowerCase();
  const topics = [];
  
  // Topic detection
  const topicKeywords = {
    fitness: ['fitness', 'workout', 'gym', 'exercise', 'health', 'fit', 'training'],
    food: ['food', 'eat', 'cook', 'recipe', 'meal', 'restaurant', 'delicious'],
    travel: ['travel', 'trip', 'vacation', 'journey', 'adventure', 'explore'],
    photography: ['photo', 'photography', 'camera', 'shot', 'picture', 'image'],
    fashion: ['fashion', 'style', 'outfit', 'clothes', 'wear', 'trend'],
    technology: ['tech', 'technology', 'digital', 'app', 'software', 'code'],
    nature: ['nature', 'outdoor', 'park', 'mountain', 'beach', 'sunset', 'hike'],
    business: ['business', 'entrepreneur', 'startup', 'marketing', 'money', 'success']
  };
  
  for (const [topic, keywords] of Object.entries(topicKeywords)) {
    if (keywords.some(keyword => textLower.includes(keyword))) {
      topics.push(topic);
    }
  }
  
  return topics.length > 0 ? topics : ['general'];
}

function generateSmartHashtags(topics, text) {
  let hashtags = [];
  
  // Topic-based hashtags
  topics.forEach(topic => {
    const topicHashtags = {
      fitness: ['#Fitness', '#Workout', '#GymLife', '#HealthyLifestyle', '#FitFam', '#Exercise', '#FitnessJourney', '#HealthGoals'],
      food: ['#Foodie', '#FoodPhotography', '#Delicious', '#HomeCooking', '#Recipe', '#FoodBlogger', '#Yummy', '#EatWell'],
      travel: ['#Travel', '#Wanderlust', '#Adventure', '#Explore', '#TravelBlogger', '#Vacation', '#TravelDiaries', '#Journey'],
      photography: ['#Photography', '#PhotoOfTheDay', '#InstaPhoto', '#Camera', '#VisualStorytelling', '#PhotographyLife', '#CreativeEye'],
      fashion: ['#Fashion', '#OOTD', '#Style', '#FashionBlogger', '#Trendy', '#Lookbook', '#Fashionista', '#StreetStyle'],
      technology: ['#Tech', '#Innovation', '#Digital', '#FutureTech', '#AI', '#Software', '#AppDevelopment', '#TechNews'],
      nature: ['#Nature', '#Outdoors', '#NaturePhotography', '#Wilderness', '#ExploreNature', '#NaturalBeauty', '#Earth'],
      business: ['#Business', '#Entrepreneur', '#Startup', '#Marketing', '#Success', '#Leadership', '#Money', '#Investing'],
      general: ['#SocialMedia', '#ContentCreator', '#Digital', '#Online', '#Community', '#Inspiration', '#Motivation', '#Life']
    };
    
    if (topicHashtags[topic]) {
      hashtags.push(...topicHashtags[topic]);
    }
  });
  
  // Extract keywords from text for additional hashtags
  const words = text.toLowerCase().split(/\s+/);
  words.forEach(word => {
    if (word.length > 4 && word.match(/^[a-z]+$/)) {
      hashtags.push(`#${capitalizeFirstLetter(word)}`);
    }
  });
  
  // Add trending and platform-specific hashtags
  const trendingTags = [
    '#Trending', '#Viral', '#ExplorePage', '#ForYouPage', '#InstaGood', 
    '#PhotoOfTheDay', '#Daily', '#Life', '#Motivation', '#Inspiration',
    '#HashFlow', '#AIAssistant', '#SmartTool'
  ];
  
  hashtags = [...hashtags, ...trendingTags];
  
  // Remove duplicates and limit
  return [...new Set(hashtags)].slice(0, 25);
}

function updateStats(toolType) {
  const output = document.getElementById(`${toolType}Output`);
  const hashtags = output.querySelectorAll('.hashtag');
  const count = hashtags.length;
  
  // Calculate character count
  let charCount = 0;
  hashtags.forEach(tag => {
    charCount += tag.textContent.length + 1; // +1 for space
  });
  
  // Update display
  document.getElementById(`${toolType}Count`).textContent = `${count} hashtags`;
  document.getElementById(`${toolType}Chars`).textContent = `Character count: ${charCount}`;
}

function capitalizeFirstLetter(string) {
  return string.charAt(0).toUpperCase() + string.slice(1);
}

function showToast(title, message, type = 'success') {
  const toast = document.getElementById('toast');
  const toastIcon = document.getElementById('toastIcon');
  const toastTitle = document.getElementById('toastTitle');
  const toastMessage = document.getElementById('toastMessage');
  
  // Set content
  toastTitle.textContent = title;
  toastMessage.textContent = message;
  
  // Set icon based on type
  if (type === 'success') {
    toastIcon.className = 'fas fa-check-circle';
    toast.style.borderLeftColor = '#10b981';
  } else if (type === 'error') {
    toastIcon.className = 'fas fa-exclamation-circle';
    toast.style.borderLeftColor = '#ef4444';
  } else {
    toastIcon.className = 'fas fa-info-circle';
    toast.style.borderLeftColor = '#f59e0b';
  }
  
  // Show toast
  toast.classList.add('show');
  
  // Hide after 3 seconds
  setTimeout(() => {
    toast.classList.remove('show');
  }, 3000);
}

// ====================
// FAQ INTERACTIVE FUNCTIONALITY
// ====================
document.addEventListener('DOMContentLoaded', function() {
  // Initialize page
  updateStats('free');
  updateStats('ai');
  
  // FAQ functionality
  const faqQuestions = document.querySelectorAll('.faq-question');
  
  faqQuestions.forEach(question => {
    question.addEventListener('click', () => {
      const answer = question.nextElementSibling;
      const isOpen = answer.classList.contains('open');
      
      // Close all other answers
      document.querySelectorAll('.faq-answer.open').forEach(openAnswer => {
        if (openAnswer !== answer) {
          openAnswer.classList.remove('open');
          openAnswer.previousElementSibling.classList.remove('active');
        }
      });
      
      // Toggle current answer
      answer.classList.toggle('open');
      question.classList.toggle('active');
    });
  });
  
  // Add keyboard shortcuts
  document.addEventListener('keydown', function(e) {
    // Ctrl+Enter in free input
    if (e.ctrlKey && e.key === 'Enter' && document.activeElement.id === 'freeInput') {
      generateFreeHashtags();
    }
    
    // Ctrl+Enter in AI input
    if (e.ctrlKey && e.key === 'Enter' && document.activeElement.id === 'aiInput') {
      generateAIHashtags();
    }
    
    // Escape to clear inputs
    if (e.key === 'Escape') {
      document.getElementById('freeInput').value = '';
      document.getElementById('aiInput').value = '';
    }
  });
});
</script>
</body>
</html>
